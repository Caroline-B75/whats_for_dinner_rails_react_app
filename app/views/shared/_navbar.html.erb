<div class="navbar fixed-top navbar-expand-sm navbar-light navbar-lewagon shadow-sm">
  <%= link_to "What's for dinner?", root_path, class: "navbar-logo" %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if current_user %>
        <li class="nav-item active">
          <% if current_user.menus.any? %>
            <%= link_to "Mon menu", menu_path(current_user.menus.last), class: "navbar-button mr-4" %>
            <%= link_to "Ma liste de courses", menu_grocery_items_path(current_user.menus.last), class: "navbar-button mr-4" %>
          <% else %>
            <%= link_to "Créer un menu", new_menu_path, class: "navbar-button mr-4" %>
          <% end %>
        </li>
        <li class="nav-item dropdown">

          <% if current_user %>
            <button class="profile-avatar shadow" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= current_user.first_name.first %>
            </button>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% if current_user %>
              <% if current_user.menus.any? %>
                <%= link_to "Mon menu", menu_path(current_user.menus.last), class: "dropdown-item" %><hr>
                <%= link_to "Ma liste de course", menu_grocery_items_path(current_user.menus.last), class: "dropdown-item" %><hr>
                <%= link_to "Mon historique de menus", menus_path, class: "dropdown-item" %><hr>
              <% else %>
                <%= link_to "Créer un menu", new_menu_path, class: "dropdown-item" %><hr>
              <% end %>
              <%= link_to "Menus partagés avec moi",  shared_menus_path, class: "dropdown-item" %><hr>
              <%= link_to "Me déconnecter", destroy_user_session_path, method: :delete,  class: "dropdown-item" %>
            <% end %>
          </div>
          
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
