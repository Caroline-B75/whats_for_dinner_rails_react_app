<h2 class="text-center mt-5">Liste des recettes déjà enregistrées</h2>
<div class="row justify-content-center">
  <div class="col-sm-11 col-md-10 col-lg-6 mb-5">
    <br />
    <ul>
      <% @recipes.each do |recipe| %>
        <li class="list-group-item">
          <div class="row">
            <div class="col-1">
              <%= recipe.id %>
            </div>
            <div class="col-7">
              <%= recipe.name.capitalize %> <em>(avec <%= recipe.preparations.length %> préparation(s))</em>
            </div>
            <div class="col-2">
            <%= link_to "Supprimer",
            recipe_path(recipe),
            method: :delete,
            class: "text-danger",
            data: { confirm: "Il faut d'abord supprimer les préparations de la recette." } %>
            </div>
            <div class="col-2">
            <%= link_to "Modifier",
            edit_recipe_path(recipe),
            method: :get %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- Button trigger modal --> 
      <div class="row d-flex justify-content-end" id="haut">
        <div class="col-md-3 d-flex justify-content-end">
          <button type="button" class="btn btn-dark fixed-bottom m-3" data-toggle="modal" data-target="#addRecipe">
            Ajouter une recette
          </button>
        </div>
      </div>

<!-- Modal -->
      <div id="addRecipe" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="addRecipeTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="addRecipeTitle">Ajouter une recette :</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
              </button>
            </div>
            <div class="modal-body">
              <%= render "form", recipe: @recipe %>
            </div>
          </div>
        </div>
      </div>