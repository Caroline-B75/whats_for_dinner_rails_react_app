<div class="menu-banner shadow-lg">
</div>

<div class="content-container">
  <div id="container-up">

    <div class="container" id="sign-up">

      <h2 class="mb-5">Connectez-vous</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      label: "Votre email",
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      label: "Votre mot de passe",
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions mt-5 mb-5">
          <%= f.button :submit, "Se connecter", class: "btn yellow-btn"%>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    
    </div>
  </div>
</div>  
